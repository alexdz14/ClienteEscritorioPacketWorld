<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientepacketworld.FXMLAdminUnidadesController">
   <children>
      <Pane prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #005eff;">
         <children>
            <Label layoutX="24.0" layoutY="14.0" text="Gestión de Unidades" textFill="WHITE">
               <font><Font name="System Bold" size="22.0" /></font>
            </Label>
         </children>
      </Pane>
      
      <TableView fx:id="tvUnidades" layoutX="30.0" layoutY="90.0" prefHeight="440.0" prefWidth="840.0">
        <columns>
          <TableColumn fx:id="tcMarca" prefWidth="120.0" text="Marca" />
          <TableColumn fx:id="tcModelo" prefWidth="120.0" text="Modelo" />
          <TableColumn fx:id="tcAnio" prefWidth="80.0" text="Año" />
          <TableColumn fx:id="tcVin" prefWidth="150.0" text="VIN" />
          <TableColumn fx:id="tcNii" prefWidth="120.0" text="NII" />
          <TableColumn fx:id="tcTipo" prefWidth="120.0" text="Tipo" />
          <TableColumn fx:id="tcEstatus" prefWidth="100.0" text="Estatus" />
        </columns>
      </TableView>
      
      <Button layoutX="530.0" layoutY="545.0" mnemonicParsing="false" onAction="#clicRegistrar" prefHeight="31.0" prefWidth="100.0" style="-fx-background-color: #27ae60;" text="Registrar" textFill="WHITE" />
      <Button layoutX="650.0" layoutY="545.0" mnemonicParsing="false" onAction="#clicEditar" prefHeight="31.0" prefWidth="100.0" style="-fx-background-color: #f39c12;" text="Editar" textFill="WHITE" />
      <Button layoutX="770.0" layoutY="545.0" mnemonicParsing="false" onAction="#clicBaja" prefHeight="31.0" prefWidth="100.0" style="-fx-background-color: #c0392b;" text="Dar Baja" textFill="WHITE" />
   </children>
</AnchorPane>