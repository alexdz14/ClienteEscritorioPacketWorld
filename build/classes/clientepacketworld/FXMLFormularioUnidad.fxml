<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientepacketworld.FXMLFormularioUnidadController">
   <children>
      <Pane prefHeight="60.0" prefWidth="600.0" style="-fx-background-color: #005eff;">
         <children>
            <Label fx:id="lbTitulo" layoutX="24.0" layoutY="14.0" text="Registro de Unidad" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
         </children>
      </Pane>
      
      <Label layoutX="40.0" layoutY="90.0" text="Marca:" />
      <TextField fx:id="tfMarca" layoutX="40.0" layoutY="110.0" prefWidth="240.0" />
      
      <Label layoutX="320.0" layoutY="90.0" text="Modelo:" />
      <TextField fx:id="tfModelo" layoutX="320.0" layoutY="110.0" prefWidth="240.0" />
      
      <Label layoutX="40.0" layoutY="160.0" text="Año:" />
      <TextField fx:id="tfAnio" layoutX="40.0" layoutY="180.0" prefWidth="240.0" promptText="Ej. 2024" />
      
      <Label layoutX="320.0" layoutY="160.0" text="VIN (Número de Identificación):" />
      <TextField fx:id="tfVin" layoutX="320.0" layoutY="180.0" prefWidth="240.0" />
      
      <Label layoutX="40.0" layoutY="230.0" text="Tipo de Unidad:" />
      <ComboBox fx:id="cbTipo" layoutX="40.0" layoutY="250.0" prefWidth="240.0" />
      
      <Button layoutX="180.0" layoutY="350.0" mnemonicParsing="false" onAction="#clicGuardar" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #27ae60;" text="Guardar" textFill="WHITE">
         <font><Font name="System Bold" size="14.0" /></font>
      </Button>
      <Button layoutX="320.0" layoutY="350.0" mnemonicParsing="false" onAction="#clicCancelar" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #c0392b;" text="Cancelar" textFill="WHITE">
         <font><Font name="System Bold" size="14.0" /></font>
      </Button>
   </children>
</AnchorPane>